# BetterBets Environment Configuration
# Copy this file to .env and update the values

# Set to 'true' to use SQLite demo database, 'false' for MySQL production
DEMO_MODE=false

# MySQL Database Configuration (only used when DEMO_MODE=false)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=betterbets

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
